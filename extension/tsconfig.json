{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./typings",
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "build/",
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    "lambdaHandler.ts",
    "gcpFunctionHandler.ts",
    "azureHandler.ts"
  ],
  "exclude": [
    "node_modules",
    "./typings/**/*",
    "**/*.test.ts"
  ],
  "compileOnSave": true
}