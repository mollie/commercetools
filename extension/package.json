{
  "name": "mollie-commercetools-integration",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build": "node_modules/typescript/bin/tsc",
    "start": "node build/src/server.js",
    "develop": "nodemon src/server.ts",
    "develop:default-config": "CT_MOLLIE_CONFIG='{\"mollieApiKey\": \"default-api-key\"}' npm run develop",
    "delete-specific-cloud-handlers": "rm build/*Handler.js",
    "zip-gcp-function": "npm ci && npm run build && cp build/gcpFunctionHandler.js build/index.js && npm run delete-specific-cloud-handlers && cp -R node_modules build/ && cd build && zip -r ../extension-module.zip . && rm index.js",
    "zip-aws-lambda": "npm ci && npm run build && cp build/lambdaHandler.js build/index.js && npm run delete-specific-cloud-handlers && cp -R node_modules build/ && cd build && zip -r ../extension-module.zip . && rm index.js",
    "zip-azure-function": "npm ci && npm run build && cp build/azureHandler.js build/index.js && npm run delete-specific-cloud-handlers && cp -R node_modules build/ && cd build && zip -r ../extension-module.zip . && rm index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:component": "jest --testPathPattern=component",
    "lint": "prettier --check ./src ./tests ./config ./**/*.md",
    "lint:fix": "prettier --write ./src ./tests ./config ./**/*.md"
  },
  "keywords": [],
  "author": "Mollie",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.10.1",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.3",
    "axios": "^0.24.0",
    "jest": "^27.2.1",
    "nock": "^13.2.1",
    "node-mocks-http": "^1.11.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@azure/functions": "^1.2.3",
    "@commercetools/platform-sdk": "^1.20.0",
    "@commercetools/sdk-client": "^2.1.2",
    "@commercetools/sdk-middleware-auth": "^6.1.4",
    "@commercetools/sdk-middleware-http": "^6.0.11",
    "@commercetools/sdk-middleware-user-agent": "^2.1.5",
    "@mollie/api-client": "3.6.0-beta.3",
    "@types/morgan": "^1.9.3",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "node-fetch-commonjs": "^3.1.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  }
}